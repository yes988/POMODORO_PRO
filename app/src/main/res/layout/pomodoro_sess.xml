<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_background"
    android:padding="16dp"
    tools:context=".ui.home.Pomotime">

    <!-- Header Title -->
    <TextView
        android:id="@+id/textPomodoroTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:elevation="4dp"
        android:text="POMODORO"
        android:textAlignment="center"
        android:textColor="@color/aurora_purple_5"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Task Name -->
    <TextView
        android:id="@+id/txtTask_Selected"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:elevation="4dp"
        android:text="Task Name"
        android:textAlignment="center"
        android:textColor="@color/text_secondary"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textPomodoroTitle" />

    <!-- Timer Container with Circle Background -->
    <androidx.cardview.widget.CardView
        android:id="@+id/timerCard"
        android:layout_width="280dp"
        android:layout_height="280dp"
        android:layout_marginTop="32dp"
        app:cardCornerRadius="140dp"
        app:cardElevation="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtTask_Selected">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- GIF Background -->
            <ImageView
                android:id="@+id/gifImageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:contentDescription="Timer animation" />

            <!-- Gradient Overlay -->
            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/circular_gradient_overlay" />

            <!-- Timer Text Overlay -->
        </FrameLayout>
    </androidx.cardview.widget.CardView>

    <!-- Music Control Buttons -->
    <LinearLayout
        android:id="@+id/musicControlLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/timerCard">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btnSwitchMusic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:contentDescription="Switch Music"
            app:backgroundTint="@color/white"
            app:fabSize="mini"
            app:srcCompat="@drawable/ic_switch_music"
            app:tint="@color/aurora_purple_3" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/imgBtn_music"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="Toggle Music"
            app:backgroundTint="@color/white"
            app:fabSize="mini"
            app:srcCompat="@android:drawable/ic_menu_slideshow"
            app:tint="@color/aurora_purple_3" />
    </LinearLayout>

    <!-- Progress Bar -->
    <TextView
        android:id="@+id/progressLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Session Progress"
        android:textColor="@color/aurora_purple_3"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/musicControlLayout" />

    <ProgressBar
        android:id="@+id/progressCount"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="12dp"
        android:layout_marginTop="8dp"
        android:progressDrawable="@drawable/progress_bar_horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/progressLabel" />

    <TextView
        android:id="@+id/progressPercentText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="0% Completed"
        android:textColor="@color/text_secondary"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/progressCount" />

    <!-- Control Buttons -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnPauseResume"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        android:backgroundTint="@color/aurora_purple_3"
        android:text="Pause"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:cornerRadius="30dp"
        app:elevation="4dp"
        app:icon="@android:drawable/ic_media_pause"
        app:iconGravity="textStart"
        app:iconTint="@color/white"
        app:layout_constraintEnd_toStartOf="@+id/guideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/progressCount" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnStop"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:backgroundTint="@color/aurora_purple_2"
        android:text="End"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:cornerRadius="30dp"
        app:elevation="4dp"
        app:icon="@android:drawable/ic_menu_close_clear_cancel"
        app:iconGravity="textStart"
        app:iconTint="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toBottomOf="@+id/progressCount" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <TextView
        android:id="@+id/textCount"
        android:layout_width="119dp"
        android:layout_height="52dp"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp"
        android:background="@drawable/timer_text_background"
        android:elevation="2dp"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp"
        android:text="00:00:00"
        android:textColor="@color/aurora_purple_5"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/progressLabel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
